<div class="blog blog_3col" id="blog">
  <h4>A Blog Type Thing</h4>
  <div class="row">
      <% blog.articles[0...4].each do |article| %>
        <article class="col s12 m4" style="padding-right: 2em;">
          <h4>
            <a href="<%= article.url %>"><%= article.title %></a>
          </h4>
          <time><%= article.date.strftime('%b %e %Y') %></time>

          <%= article.summary %>

          <a href="<%= article.url %>">Read more</a>
        </article>
      <% end %>
  </div>
</div>
